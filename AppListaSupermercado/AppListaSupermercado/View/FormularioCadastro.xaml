<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.FormularioCadastro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Produto" />
            <Entry x:Name="txt_produto" />

            <Label Text="Quantidade" />
            <Entry x:Name="txt_QTD" />

            <Label Text="Valor estimado" />
            <Entry x:Name="txt_VLRest" />

            <Label Text="Valor real" />
            <Entry x:Name="txt_VLRreal" />
            
            <Button Text="Salvar" Clicked="Button_Clicked"
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>